            <Button Click="SaveBtn" Style="{StaticResource Btn1}" Content="Сохранить" Grid.Row="21" FontSize="14" Grid.RowSpan="3" Grid.Column="19" Grid.ColumnSpan="6"></Button>
            <Button Click="ClearBtn" Style="{StaticResource Btn1}" Content="Очистить" Grid.Row="21" FontSize="14" Grid.RowSpan="3" Grid.Column="26" Grid.ColumnSpan="6"></Button>
            <Button Click="CancelBtn" Style="{StaticResource Btn1}" Content="Отмена" Grid.Row="21" FontSize="14" Grid.RowSpan="3" Grid.Column="33" Grid.ColumnSpan="6"></Button>

            <Label Style="{StaticResource Lb1}" FontSize="16" Content="Процент ставки" Grid.Row="5" Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="9"></Label>
            <TextBox Name="tbx1" Style="{StaticResource Tbx1}" Text="{Binding PercentRate}" Grid.Row="8" Grid.RowSpan="4" Grid.Column="2" Grid.ColumnSpan="17"></TextBox>
            <Label Style="{StaticResource Lb1}" FontSize="16" Content="Дата начала действия" Grid.Row="5" Grid.RowSpan="3" Grid.Column="24" Grid.ColumnSpan="11"></Label>
            <TextBox Name="tbx2" Style="{StaticResource Tbx1}" Text="{Binding StartDate}" Grid.Row="8" Grid.RowSpan="4" Grid.Column="21" Grid.ColumnSpan="17"></TextBox>

            <Button Click="SystemDateTimeBtn" Style="{StaticResource Btn1}" FontSize="14" Grid.Row="15" Grid.RowSpan="4" Grid.Column="2" Grid.ColumnSpan="17" Content="Вставить системное время"></Button>
            <Label Style="{StaticResource Lb1}" FontSize="16" Content="Дата окончания действия" Grid.Row="12" Grid.RowSpan="3" Grid.Column="24" Grid.ColumnSpan="11"></Label>
            <TextBox Name="tbx3" Style="{StaticResource Tbx1}" Text="{Binding FinishDate}" Grid.Row="15" Grid.RowSpan="4" Grid.Column="21" Grid.ColumnSpan="17"></TextBox>
        </Grid>
    </Viewbox>
