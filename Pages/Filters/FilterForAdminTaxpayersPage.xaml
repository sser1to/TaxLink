            <Label Style="{StaticResource Lb1}" Content="ФИО" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></Label>
            <TextBox Name="tbx1" TextChanged="tbx1_TextChanged" Style="{StaticResource Tbx1}" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></TextBox>

            <Label Style="{StaticResource Lb1}" Content="ИНН" Grid.Row="4" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></Label>
            <TextBox Name="tbx2" TextChanged="tbx2_TextChanged" Style="{StaticResource Tbx1}" Grid.Row="6" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></TextBox>

            <Label Style="{StaticResource Lb1}" Content="Серия и номер паспорта" Grid.Row="8" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></Label>
            <TextBox Name="tbx3" TextChanged="tbx3_TextChanged" Style="{StaticResource Tbx1}" Grid.Row="10" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></TextBox>

            <Label Style="{StaticResource Lb1}" Content="Код" Grid.Row="12" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></Label>
            <TextBox Name="tbx4" TextChanged="tbx4_TextChanged" Style="{StaticResource Tbx1}" Grid.Row="14" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></TextBox>

            <Label Style="{StaticResource Lb1}" Content="Логин" Grid.Row="16" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></Label>
            <TextBox Name="tbx5" TextChanged="tbx5_TextChanged" Style="{StaticResource Tbx1}" Grid.Row="18" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></TextBox>

            <Label Style="{StaticResource Lb1}" Content="Пол" Grid.Row="20" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18"></Label>
            <ComboBox Name="cbx1" SelectionChanged="cbx1_SelectionChanged" SelectedIndex="0" Style="{StaticResource Cbx1}" Grid.Row="22" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="18">
                <ComboBoxItem Content="Не выбран"></ComboBoxItem>
                <ComboBoxItem Content="Мужской"></ComboBoxItem>
                <ComboBoxItem Content="Женский"></ComboBoxItem>
            </ComboBox>

            <Button Click="PreviosPageBtn" Style="{StaticResource Btn1}" Content="&lt;" Grid.Row="33" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="4"></Button>
            <Border Style="{StaticResource Bord2}" Grid.Row="33" Grid.RowSpan="3" Grid.Column="5" Margin="5, 0, 5, 0" Grid.ColumnSpan="10" CornerRadius="5">
                <TextBlock Name="tbxpage" Style="{StaticResource Tbc1}"></TextBlock>
            </Border>
            <Button Click="NextPageBtn" Style="{StaticResource Btn1}" Content=">" Grid.Row="33" Grid.RowSpan="3" Grid.Column="15" Grid.ColumnSpan="4"></Button>

            <Button Click="ClearBtn" Style="{StaticResource Btn1}" Content="Очистить" Grid.Row="37" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="18"></Button>
