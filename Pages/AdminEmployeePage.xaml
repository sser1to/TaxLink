                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="dg" Style="{StaticResource Dg1}" Grid.Row="5" Grid.RowSpan="34" Grid.Column="1" Grid.ColumnSpan="38" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код" Binding="{Binding IdEmployee}"></DataGridTextColumn>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Пол" Binding="{Binding GenderName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Номер телефона" Binding="{Binding Phone}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата начала работы" Binding="{Binding FormatedDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Пароль" Binding="{Binding Password}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Click="AddBtn" Style="{StaticResource Btn1}" Content="Добавить" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="6"></Button>
            <Button Click="EditBtn" Style="{StaticResource Btn1}" Content="Редактировать" Grid.Row="1" Grid.RowSpan="3" Grid.Column="8" Grid.ColumnSpan="6"></Button>
            <Button Click="DeleteBtn" Style="{StaticResource Btn1}" Content="Удалить" Grid.Row="1" Grid.RowSpan="3" Grid.Column="15" Grid.ColumnSpan="6"></Button>
        </Grid>
    </Viewbox>
</Page>
