<Page x:Class="TaxLink.Pages.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaxLink.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="240"
      Title="NotificationPage" Background="White">
    <Viewbox Stretch="Fill">
        <Grid Height="50" Width="240">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource Lb1}" Content="Оповещение" FontWeight="Bold" FontSize="9" Height="50"></Label>
            <Border MouseLeftButtonDown="CloseBtn" Style="{StaticResource Bord3}" Grid.Column="1" Grid.RowSpan="1" CornerRadius="3" Margin="1">
                <Image Source="/Images/close.png" Margin="1"/>
            </Border>
            <TextBlock Name="tbc1" Style="{StaticResource Tbc1}" FontSize="10" Grid.Row="1" Grid.ColumnSpan="2"></TextBlock>
        </Grid>
    </Viewbox>
</Page>
