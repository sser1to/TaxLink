            <Label Style="{StaticResource Lb1}" FontSize="36" Content="Собственность налогоплательщиков (количественное соотношение)" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="32" Grid.RowSpan="3"></Label>
            <lvc:PieChart Series="{Binding PieChartData}" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="26" Grid.RowSpan="26">
                <lvc:PieChart.DataTooltip>
                    <lvc:DefaultTooltip />
                </lvc:PieChart.DataTooltip>
            </lvc:PieChart>
            <Label Name="lb1" Style="{StaticResource Lb1}" FontSize="24" Content="Квартиры: 20" HorizontalAlignment="Right" Grid.Row="14" Grid.Column="22" Grid.ColumnSpan="10" Grid.RowSpan="2"></Label>
            <Label Name="lb2" Style="{StaticResource Lb1}" FontSize="24" Content="Частные дома: 20" HorizontalAlignment="Right" Grid.Row="16" Grid.Column="22" Grid.ColumnSpan="10" Grid.RowSpan="2"></Label>
            <Label Name="lb3" Style="{StaticResource Lb1}" FontSize="24" Content="Гаражи: 20" HorizontalAlignment="Right" Grid.Row="18" Grid.Column="22" Grid.ColumnSpan="10" Grid.RowSpan="2"></Label>
            <Label Name="lb4" Style="{StaticResource Lb1}" FontSize="24" Content="Земельные участки: 20" HorizontalAlignment="Right" Grid.Row="20" Grid.Column="22" Grid.ColumnSpan="10" Grid.RowSpan="2"></Label>
            <Label Name="lb5" Style="{StaticResource Lb1}" FontSize="24" Content="Транспорт: 20" HorizontalAlignment="Right" Grid.Row="22" Grid.Column="22" Grid.ColumnSpan="10" Grid.RowSpan="2"></Label>
            <Label Name="lb6" Style="{StaticResource Lb1}" FontWeight="Bold" FontSize="24" Content="Всего: 20" HorizontalAlignment="Right" Grid.Row="24" Grid.Column="22" Grid.ColumnSpan="10" Grid.RowSpan="2"></Label>
