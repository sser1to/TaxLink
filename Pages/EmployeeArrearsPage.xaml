                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="dg" Style="{StaticResource Dg1}" Grid.Row="5" Grid.RowSpan="34" Grid.Column="1" Grid.ColumnSpan="38" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код" Binding="{Binding IdArrears}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Код налога" Binding="{Binding IdTax}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Налогоплательщик" Binding="{Binding TaxpayerName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Сумма задолженности (руб.)" Binding="{Binding SumRub}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Пени (руб.)" Binding="{Binding Peni}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Общая сумма задолженности (руб.)" Binding="{Binding FSum}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата начала задолженности" Binding="{Binding FormatedStartDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата окончания задолженности" Binding="{Binding FormatedFinishDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Статус оплаты" Binding="{Binding StatusName}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Click="MakePayment" Style="{StaticResource Btn1}" Content="Провести платеж по задолженности" Grid.Row="1" Grid.RowSpan="3" Grid.Column="20" Grid.ColumnSpan="10"></Button>
            <Button Click="ArrearsNotificationBtn" Style="{StaticResource Btn1}" Content="Сформировать уведомление" Grid.Row="1" Grid.RowSpan="3" Grid.Column="31" Grid.ColumnSpan="8"></Button>
        </Grid>
    </Viewbox>
</Page>
