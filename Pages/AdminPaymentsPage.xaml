            </Grid.ColumnDefinitions>
            <DataGrid Name="dg" Style="{StaticResource Dg1}" Grid.Row="1" Grid.RowSpan="38" Grid.Column="1" Grid.ColumnSpan="38" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код" Binding="{Binding IdPayment}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Налогоплательщик" Binding="{Binding TaxpayerName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Код задолженности" Binding="{Binding IdArrears}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Код налога" Binding="{Binding IdTax}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Тип платежа" Binding="{Binding TypeOfPaymentName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Сумма платежа (руб.)" Binding="{Binding SumRub}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата платежа" Binding="{Binding FormatedDate}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Viewbox>
</Page>
