<Page x:Class="TaxLink.Pages.NotificationHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaxLink.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="380"
      Title="NotificationHistoryPage" Background="White">
    <Viewbox Stretch="Fill">
        <Grid Height="200" Width="380">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource Lb1}" Content="Список оповещений" FontWeight="Bold" FontSize="12" Height="50"></Label>
            <Border MouseLeftButtonDown="CloseBtn" Style="{StaticResource Bord3}" Grid.Column="1" Grid.RowSpan="1" CornerRadius="3" Margin="2">
                <Image Source="/Images/close.png" Margin="1"/>
            </Border>
            <ListBox BorderThickness="0.3" BorderBrush="Black" Grid.Row="1" Name="lbx" Grid.ColumnSpan="2" FontSize="12" Margin="3"></ListBox>
        </Grid>
    </Viewbox>
</Page>
