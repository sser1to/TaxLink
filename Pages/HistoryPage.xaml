                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="dg" Style="{StaticResource Dg1}" Grid.Row="5" Grid.RowSpan="34" Grid.Column="1" Grid.ColumnSpan="38" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Действие" Binding="{Binding ActionName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Таблица" Binding="{Binding WorkingTableName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Id записи" Binding="{Binding IdAffectedElement}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата и время" Binding="{Binding FormatedDate}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Click="ClearBtn" Style="{StaticResource Btn1}" Content="Очистить историю" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="7"></Button>
        </Grid>
    </Viewbox>
</Page>
