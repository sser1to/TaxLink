                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="dg" Style="{StaticResource Dg1}" Grid.Row="5" Grid.RowSpan="34" Grid.Column="1" Grid.ColumnSpan="38" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код" Binding="{Binding IdProperty}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Налогоплательщик" Binding="{Binding TaxpayerName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Тип собственности" Binding="{Binding TypeOfPropertyName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата приобретения" Binding="{Binding FormatedDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Стоимость приобретения (руб.)" Binding="{Binding SumRub}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Click="AddBtn" Style="{StaticResource Btn1}" Content="Добавить" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="6"></Button>
            <Button Click="EditBtn" Style="{StaticResource Btn1}" Content="Редактировать" Grid.Row="1" Grid.RowSpan="3" Grid.Column="8" Grid.ColumnSpan="6"></Button>
            <Button Click="DeleteBtn" Style="{StaticResource Btn1}" Content="Удалить" Grid.Row="1" Grid.RowSpan="3" Grid.Column="15" Grid.ColumnSpan="6"></Button>
            <Button Click="ImageBtn" Style="{StaticResource Btn1}" Content="Посмотреть фото" Grid.Row="1" Grid.RowSpan="3" Grid.Column="32" Grid.ColumnSpan="7"></Button>
        </Grid>
    </Viewbox>
</Page>
