                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource Lb1}" Content="Общее" FontSize="36" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3" HorizontalAlignment="Left"></Label>
            <Label Style="{StaticResource Lb1}" Content="Тема приложения" FontSize="24" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="3" HorizontalAlignment="Left"></Label>
            <Border MouseLeftButtonDown="Br1Btn" Name="br1" Style="{StaticResource Bord1}" BorderThickness="1" Background="#D9D9D9" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="5" Margin="7" CornerRadius="10"></Border>
            <Border MouseLeftButtonDown="Br2Btn" Name="br2" Style="{StaticResource Bord1}" BorderThickness="1" Background="#FF8E8E" Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="5" Margin="7" CornerRadius="10"></Border>
            <Border MouseLeftButtonDown="Br3Btn" Name="br3" Style="{StaticResource Bord1}" BorderThickness="1" Background="#A5FFD4" Grid.Row="7" Grid.Column="7" Grid.ColumnSpan="3" Grid.RowSpan="5" Margin="7" CornerRadius="10"></Border>
            <Border MouseLeftButtonDown="Br4Btn" Name="br4" Style="{StaticResource Bord1}" BorderThickness="1" Background="#FFDC81" Grid.Row="7" Grid.Column="10" Grid.ColumnSpan="3" Grid.RowSpan="5" Margin="7" CornerRadius="10"></Border>
            <CheckBox Click="Cb1Click" Name="cb1" Style="{StaticResource Chx1}"  FontSize="16" Grid.Row="13" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="15" HorizontalAlignment="Left" Content="Отображать информационные оповещения"></CheckBox>
            <Label Style="{StaticResource Lb1}" Content="Специальные возможности" FontSize="36" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="15" Grid.RowSpan="3" HorizontalAlignment="Left"></Label>
            <Label Style="{StaticResource Lb1}" Content="Размер шрифта в таблицах" FontSize="24" Grid.Row="18" Grid.Column="1" Grid.ColumnSpan="8" Grid.RowSpan="3" HorizontalAlignment="Left"></Label>
            <TextBox IsReadOnly="True" Name="tbx1" Style="{StaticResource Tbx1}" Grid.Row="18" Grid.RowSpan="3" Grid.Column="9" Grid.ColumnSpan="2" Margin="10"></TextBox>
            <Slider ValueChanged="sl1_ValueChanged" Name="sl1" Grid.Row="21" Grid.Column="1" Grid.ColumnSpan="10"></Slider>
            <Border Style="{StaticResource Bord2}" Grid.Row="23" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="12">
                <Label Name="lb1" Style="{StaticResource Lb1}" Content="Предложение для проверки размера шрифта"></Label>
            </Border>

            <Label Style="{StaticResource Lb1}" Content="Кол-во записей на странице" FontSize="23" Grid.Row="28" Grid.Column="1" Grid.ColumnSpan="8" Grid.RowSpan="3" HorizontalAlignment="Left"></Label>
            <TextBox IsReadOnly="True" Name="tbx2" Style="{StaticResource Tbx1}" Grid.Row="28" Grid.RowSpan="3" Grid.Column="9" Grid.ColumnSpan="2" Margin="10"></TextBox>
            <Slider ValueChanged="sl2_ValueChanged" Name="sl2" Grid.Row="31" Grid.Column="1" Grid.ColumnSpan="10"></Slider>

            <Button Click="ApplyBtn" Style="{StaticResource Btn1}" Content="Применить" Grid.Row="36" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="3"></Button>
            <Button Click="DefaultBtn" Style="{StaticResource Btn1}" Content="Настройки по умолчанию" Grid.Row="36" Grid.Column="8" Grid.ColumnSpan="8" Grid.RowSpan="3"></Button>
        </Grid>
    </Viewbox>
</Page>
