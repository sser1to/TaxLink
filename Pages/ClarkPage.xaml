            </Grid.ColumnDefinitions>
            <Image Source="pack://application:,,,/Images/clark.png" Stretch="Fill" Grid.Row="1" Grid.RowSpan="8" Grid.Column="2" Grid.ColumnSpan="4"/>
            <Border Style="{StaticResource Bord2}" Grid.Row="2" Grid.RowSpan="6" Grid.Column="7" Grid.ColumnSpan="31" BorderThickness="1">
                <TextBlock Name="tbc0" Style="{StaticResource Tbc1}" FontSize="24" Text="Привет, я Кларк - твой личный путеводитель по этой программе. Можешь задавать мне любые вопросы, связанные с этой программой или предметной областью налоговая инспекция. Буду рад тебе помочь!"></TextBlock>
            </Border>

            <Image Name="img1" Visibility="Hidden" Source="pack://application:,,,/Images/user.png" Stretch="Fill" Grid.Row="11" Grid.RowSpan="8" Grid.Column="34" Grid.ColumnSpan="4"/>
            <Border Name="br1" Visibility="Hidden" Style="{StaticResource Bord2}" Grid.Row="12" Grid.RowSpan="6" Grid.Column="2" Grid.ColumnSpan="31" BorderThickness="1">
                <TextBlock Name="tbc1" Style="{StaticResource Tbc1}" FontSize="24">Ожидание запроса...</TextBlock>
            </Border>
            <Image Name="img2" Visibility="Hidden" Source="/Images/clark.png" Stretch="Fill" Grid.Row="21" Grid.RowSpan="8" Grid.Column="2" Grid.ColumnSpan="4"/>
            <Border Name="br2" Visibility="Hidden" Style="{StaticResource Bord2}" Grid.Row="22" Grid.RowSpan="6" Grid.Column="7" Grid.ColumnSpan="31" BorderThickness="1">
                <TextBlock Name="tbc2" Style="{StaticResource Tbc1}" FontSize="24" Text="..."></TextBlock>
            </Border>
            <TextBox TextChanged="tbx1_TextChanged" MaxLength="100" Name="tbx1" Style="{StaticResource Tbx1}" BorderThickness="2" Grid.Row="35" Grid.RowSpan="3" Grid.Column="8" Grid.ColumnSpan="24"></TextBox>
            <Button IsDefault="True" Click="EnterBtn" Style="{StaticResource Btn1}" Grid.Row="35" Grid.RowSpan="3" Grid.Column="33" Grid.ColumnSpan="2">
                <StackPanel>
                    <Image Source="pack://application:,,,/Images/up arrow.png" Width="30" />
                </StackPanel>
            </Button>
            <Button Click="HistoryBtn" Style="{StaticResource Btn1}" Grid.Row="35" Grid.RowSpan="3" Grid.Column="5" Grid.ColumnSpan="2">
                <StackPanel>
                    <Image Source="pack://application:,,,/Images/history.png" Width="30" />
                </StackPanel>
            </Button>
            <Label Name="lb1" Style="{StaticResource Lb1}" FontSize="10" Foreground="Gray" HorizontalAlignment="Right" Content="0/100" Grid.Row="37" Grid.Column="30" Grid.ColumnSpan="2"></Label>
        </Grid>
